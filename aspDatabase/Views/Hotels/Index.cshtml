@model IEnumerable<aspDatabase.Models.Hotel>

@{
    ViewData["Title"] = "Отели";
}

<h1 class="display-4">Отели</h1>

@if (User.IsInRole("admin"))
{
    <p>
        <a class="btn btn-primary" asp-action="Create">Создать</a>
    </p>
}

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Rating)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Owner)</th>
                <th>@Html.DisplayNameFor(model => model.Img)</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Owner)</td>
                    <td>@Html.DisplayFor(modelItem => item.Img)</td>
                    <td>
                        @if (User.IsInRole("admin"))
                        {
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Редактировать</a>
                        }
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Детали</a>
                        @if (User.IsInRole("admin"))
                        {
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
