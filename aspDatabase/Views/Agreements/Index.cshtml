@model IEnumerable<aspDatabase.Models.Agreement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-4">Соглашения</h1>

    <div class="d-flex justify-content-between mb-3">
        <a class="btn btn-primary" asp-action="Create">Создать</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.clientID)</th>
                <th>@Html.DisplayNameFor(model => model.dateDoc)</th>
                <th>@Html.DisplayNameFor(model => model.hotelId)</th>
                <th>@Html.DisplayNameFor(model => model.roomID)</th>
                <th>@Html.DisplayNameFor(model => model.reservStart)</th>
                <th>@Html.DisplayNameFor(model => model.reservEnd)</th>
                <th>@Html.DisplayNameFor(model => model.Cost)</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(item.Client != null ? $"{item.Client.FirstName} {item.Client.SecondName} {item.Client.ThirdName}" : "Нет данных")</td>
                    <td>@Html.DisplayFor(modelItem => item.dateDoc)</td>
                    <td>@(item.Hotel != null ? item.Hotel.Name : "Нет данных")</td>
                    <td>@Html.DisplayFor(modelItem => item.roomID)</td>
                    <td>@Html.DisplayFor(modelItem => item.reservStart)</td>
                    <td>@Html.DisplayFor(modelItem => item.reservEnd)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cost)</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Редактирование</a>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Детали</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
